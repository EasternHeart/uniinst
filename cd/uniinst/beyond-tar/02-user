chroot $HDMNT passwd root
dialog-input "新建用户：" "default"
chroot $HDMNT useradd -m "`dialog-input-geiinfo`"
chroot $HDMNT passwd "`dialog-input-geiinfo`"
chroot $HDMNT usermod -a -G audio "`dialog-input-geiinfo`"
chroot $HDMNT usermod -a -G video "`dialog-input-geiinfo`"
chroot $HDMNT usermod -a -G users "`dialog-input-geiinfo`"
echo "`dialog-input-geiinfo` ALL=(ALL) ALL" > $HDMNT/etc/sudoers
